<h2>Categories</h2>

<div class="col-md-4">
  <ul class="list-group">
    <% @categories.each do |category| %>
      <li class="list-group-item">
        <%= category.name %>
        <%= link_to "Delete", admin_category_path(category), method: :delete,
        class: "btn-sm btn-default", data: {confirm: "Delete #{category.name}?
        This will also delete all associated ideas"} %>
      </li>
    <% end %>
  </ul>
</div>